<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="1sp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="7sp"
        card_view:cardElevation="9sp">
        <!--card_view:cardUseCompatPadding="true"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:paddingTop="15sp"
                android:paddingBottom="5sp">
                <!--android:background="@drawable/green_round_rect_border"-->

                <LinearLayout
                    android:id="@+id/llDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:layout_toLeftOf="@+id/llTagetSteps"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDateDayMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23rd Sep"
                        android:textColor="@color/clrStatusBar2"
                        android:textSize="19sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvDateYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017"
                        android:textColor="@color/clrStatusBar"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llTagetSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTargetSetps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textColor="@color/clrTrBlack"
                        android:textSize="15sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvTagTargetSetps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal"
                        android:textColor="@color/clrTrBlack"
                        android:textSize="12sp"
                        android:gravity="center"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingTop="3sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:layout_toRightOf="@+id/llTagetSteps"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStpes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:textColor="@color/clrStatusBar2"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvTagSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textColor="@color/clrStatusBar"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@color/clrStatusBar"/>


            <RelativeLayout
                android:id="@+id/rlTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:paddingRight="5sp">

                <View
                    android:id="@+id/dummyView"
                    android:layout_width="1sp"
                    android:background="@color/clrStatusBar"
                    android:layout_height="45sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_centerInParent="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="5sp"
                    android:paddingBottom="15sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:layout_toLeftOf="@+id/dummyView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCaloriesBurn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_gravity="center"
                        android:textColor="@color/clrStatusBar2"
                        android:textSize="17sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvTagCaloriesBurn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Calories Burned"
                        android:textColor="@color/clrStatusBar"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="15sp"
                    android:layout_toRightOf="@+id/dummyView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0047 km"
                        android:layout_gravity="center"
                        android:textColor="@color/clrStatusBar2"
                        android:textSize="17sp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tvTagDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Distance"
                        android:textColor="@color/clrStatusBar"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>