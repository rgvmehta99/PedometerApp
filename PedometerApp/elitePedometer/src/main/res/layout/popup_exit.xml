<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clrWhite"
        android:minWidth="250dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vDividerLine"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:maxLines="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Are you sure you want to exit ?"
            android:textColor="@color/clrBlack"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vDividerLine"
                android:background="@drawable/white_btn_ripple"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="Cancel"
                android:textColor="@color/clrStatusBar2"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vDividerLine"
                android:background="@drawable/white_btn_ripple"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="Exit"
                android:textColor="@color/clrStatusBar2"
                android:textSize="14sp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>