<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="45sp"
        android:paddingTop="45sp">

        <TextView
            android:id="@+id/tvTargetSetps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:text="Target Steps"
            android:textColor="@color/clrStatusBar"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/etTargetSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTargetSetps"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/green_round_rect_border"
            android:digits="0123456789"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:hint="i.e. 10000"
            android:paddingBottom="5sp"
            android:paddingLeft="23sp"
            android:paddingRight="25sp"
            android:paddingTop="5sp"
            android:text=""
            android:textColor="@color/clrStatusBar2"
            android:textSize="25sp"/>

        <!--<View-->
        <!--android:id="@+id/devider"-->
        <!--android:layout_width="match_parent"-->
